{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true, // позволяет использовать импроты es6
    "allowSyntheticDefaultImports": true // позволяет использовать импроты es6
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./config/jest/jest.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config",
    "webpack.config.ts"
  ]
}
